# ─── Test Environment ──────────────────────────────────────
# Used by docker-compose.test.yml and test runners
NODE_ENV=test
LOG_LEVEL=warn

# ─── PostgreSQL (test) ─────────────────────────────────────
DATABASE_URL=postgresql://glassbid:glassbid_secret@localhost:5433/glassbid_test
POSTGRES_USER=glassbid
POSTGRES_PASSWORD=glassbid_secret
POSTGRES_DB=glassbid_test

# ─── Redis (test) ──────────────────────────────────────────
REDIS_URL=redis://localhost:6380

# ─── MinIO (test) ──────────────────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9010
MINIO_ACCESS_KEY=testadmin
MINIO_SECRET_KEY=testadmin_secret
MINIO_USE_SSL=false

# ─── App (test) ────────────────────────────────────────────
APP_PORT=3001
CORS_ORIGIN=http://localhost:8090
TUS_ENDPOINT=http://localhost:8081/files/

# ─── Worker (test) ─────────────────────────────────────────
POLL_INTERVAL_SECONDS=1
WORKER_ID=test-worker-1
WORKER_MODE=full
MAX_MEMORY_MB=2048
TEMP_DIR=/tmp/glassbid-test-worker
DISK_PRESSURE_THRESHOLD_PCT=80

# ─── Tusd (test) ──────────────────────────────────────────
TUSD_S3_ENDPOINT=http://localhost:9010
TUSD_S3_BUCKET=raw-uploads
TUSD_HOOKS_HTTP=http://localhost:3001/api/webhooks/tus
