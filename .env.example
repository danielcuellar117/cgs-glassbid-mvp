# ─── Common ───────────────────────────────────────────────
NODE_ENV=development
LOG_LEVEL=debug

# ─── PostgreSQL ───────────────────────────────────────────
DATABASE_URL=postgresql://glassbid:glassbid_secret@postgres:5432/glassbid
POSTGRES_USER=glassbid
POSTGRES_PASSWORD=glassbid_secret
POSTGRES_DB=glassbid

# ─── Redis (optional) ────────────────────────────────────
REDIS_URL=redis://redis:6379

# ─── MinIO ────────────────────────────────────────────────
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_secret
MINIO_USE_SSL=false

# ─── App (BFF) ────────────────────────────────────────────
APP_PORT=3000
CORS_ORIGIN=http://localhost:3000
SSE_HEARTBEAT_INTERVAL=15000
TUS_ENDPOINT=http://tusd:8080/files/

# ─── Worker ───────────────────────────────────────────────
POLL_INTERVAL_SECONDS=2
WORKER_ID=worker-1
WORKER_MODE=full
MAX_MEMORY_MB=5120
TEMP_DIR=/data/worker-tmp
DISK_PRESSURE_THRESHOLD_PCT=80
PNG_THUMB_DPI=72
PNG_MEASURE_DPI=200
MAX_RENDER_PIXELS=8000
MAX_RENDER_DPI=400

# ─── Tusd ─────────────────────────────────────────────────
TUSD_S3_ENDPOINT=http://minio:9000
TUSD_S3_BUCKET=raw-uploads
TUSD_HOOKS_HTTP=http://app:3000/api/webhooks/tus
